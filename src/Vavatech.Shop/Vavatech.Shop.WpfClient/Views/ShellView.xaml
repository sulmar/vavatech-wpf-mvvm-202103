    <Grid>

        <DockPanel>

            <!-- Menu -->
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="File"></MenuItem>
                <MenuItem Header="Edit"></MenuItem>
                <MenuItem Header="View"></MenuItem>
                <MenuItem Header="Help"></MenuItem>
            </Menu>


            <!-- Status bar -->
            <StatusBar DockPanel.Dock="Bottom">
                <StatusBarItem>Ready</StatusBarItem>
                <StatusBarItem>John Smith</StatusBarItem>
            </StatusBar>
            
            <!-- Side bar -->
            <StackPanel Width="250" Background="{StaticResource MyGradientBrush}" >

                <Border Background="{StaticResource MyBlueBrush}" Height="48">
                                        
                    <Label 
                        Foreground="White" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Center" 
                        FontSize="18"
                        Content="WPF App" />
                </Border>

                <Button>Home</Button>
                <Button>Counter</Button>
                <Button>Customers</Button>
                <Button>Products</Button>
                <Button>Orders</Button>
                <Button Style="{StaticResource SettingsButtonStyle}">Settings</Button>
                

            </StackPanel>

          

            <!-- Main -->

            <Grid DockPanel.Dock="Top" Background="#f7f7f7" Height="48">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource MenuBarButtonStyle}">Help</Button>
                    <Button Style="{StaticResource DangerousMenuBarButtonStyle}">About</Button>
                </StackPanel>
            </Grid>


            <Frame Source="CustomersView.xaml" />


        </DockPanel>

    </Grid>
