<Page
    x:Class="Vavatech.Shop.WpfClient.Views.DispatcherView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Vavatech.Shop.WpfClient.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DispatcherView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{Binding Source={StaticResource ViewModelLocator}, Path=DispatcherViewModel}"
    mc:Ignorable="d">

    <Grid>

        <TextBlock x:Name="StatusTextBlock"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="64"
            Text="{Binding Status}" />

    </Grid>
</Page>
