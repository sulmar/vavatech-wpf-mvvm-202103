<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:m="clr-namespace:Vavatech.Shop.Models;assembly=Vavatech.Shop.Models"
                    >


    <DataTemplate x:Key="CustomerTemplate" DataType="{x:Type m:Customer}">

        <Border BorderBrush="LightGray" BorderThickness="1">
            <StackPanel Orientation="Horizontal">

                <Image Width="100" Source="{Binding Avatar}" />

                <TextBlock Style="{StaticResource TextBlockStyle}">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{} {0} {1}">
                            <Binding Path="FirstName" />
                            <Binding Path="LastName" />
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>

                <TextBlock Style="{StaticResource TextBlockStyle}" Text="{Binding CustomerType}" />


                <CheckBox IsChecked="{Binding IsRemoved}"  />

            </StackPanel>
        </Border>
    </DataTemplate>


</ResourceDictionary>