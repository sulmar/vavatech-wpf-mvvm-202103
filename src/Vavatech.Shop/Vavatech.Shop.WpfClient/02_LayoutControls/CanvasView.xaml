              Stroke="Black" />

            <Line X1="100" X2="10" Y1="20" Y2="100" StrokeThickness="3"
              Stroke="Black" />

            <Button
                Canvas.Left="50"
                Canvas.Top="317"
                Width="200" Height="70" Background="Navy" Foreground="White">

                <Canvas>
                    <Ellipse Width="20" Height="20"  Fill="DarkGreen" />
                </Canvas>
                
            </Button>
            <Button
                Canvas.Left="287"
                Canvas.Top="317"
                Width="200" Height="50" Background="LightSalmon" Foreground="White" Content="Hello"/>

        </Canvas>
    </Grid>
</Window>
